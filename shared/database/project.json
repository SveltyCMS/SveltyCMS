{
	"name": "database",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "shared/database/src",
	"projectType": "library",
	"tags": ["type:shared", "scope:database"],
	"targets": {
		"build": {
			"executor": "@nx/vite:build",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/shared/database",
				"main": "shared/database/src/index.ts",
				"tsConfig": "shared/database/tsconfig.json",
				"external": ["mongoose", "mariadb", "mysql2", "postgres"]
			}
		},
		"lint": {
			"executor": "@nx/eslint:lint"
		},
		"test": {
			"executor": "@nx/vite:test"
		}
	}
}
