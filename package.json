{
  "name": "sveltycms",
  "description": "A powerful Headless CMS with sveltekit power",
  "version": "0.0.5",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "-- DEVELOP -------------------------------------------": "",
    "dev": "vite dev",
    "devv": "LAUNCH_EDITOR='code' vite --open",

    "-- BUILD ---------------------------------------------": "",
    "build": "NODE_OPTIONS=\"--no-warnings --no-deprecation\" bun run vite build",
    "build:verbose": "NODE_OPTIONS=\"--no-warnings --no-deprecation\" bun run vite build",
    "build:high-memory": "NODE_OPTIONS=\"--max-old-space-size=16384\" bun run vite build",
    "build:low-memory": "NODE_OPTIONS=\"--max-old-space-size=4096\" bun run vite build",
    "build:analyze": "NODE_OPTIONS=\"--max-old-space-size=8192\" bun x vite-bundle-visualizer && bun run build:verbose",
    "build:report": "bun run build:verbose && du -h .svelte-kit/output/client/_app/immutable/chunks/*.js | sort -rh | head -20",
    "build:stats": "bun run build:verbose && node scripts/bundle-stats.js",

    "-- CHECK & TEST ---------------------------------------": "",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --threshold error",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",

    "test": "bun run test:unit",
    "test:unit": "bun test --preload ./tests/bun/setup.ts tests/bun/services tests/bun/utils tests/bun/stores tests/bun/widgets",

    "test:integration": "bun run scripts/run-integration-tests.ts",
    "test:integration:run": "wait-on http://localhost:4173 && bun test --preload ./tests/bun/setup.ts tests/bun/api tests/bun/databases tests/bun/hooks",

    "test:e2e": "concurrently -k -s last \"bun run dev\" \"bun run test:e2e:run\"",
    "test:e2e:run": "wait-on http://localhost:4173 && bun x playwright test tests/playwright",

    "test:all": "bun run test:unit && bun run test:integration && bun run test:e2e",

    "-- DIAGNOSTICS ---------------------------------------": "",
    "check:mongodb": "node scripts/check-mongodb.js",

    "-- LINT & FORMAT -------------------------------------": "",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",

    "-- OTHER ----------------------------------------------": "",
    "preview": "bun run vite preview",
    "paraglide": "paraglide-js compile --project ./project.inlang --outdir ./src/paraglide",
    "translate": "bun x @inlang/cli machine translate --project ./project.inlang",

    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "license": "BUSL-1.1",
  "homepage": "https://SveltyCMS.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/SveltyCMS/SveltyCMS"
  },
  "bugs": {
    "url": "https://github.com/SveltyCMS/SveltyCMS/issues"
  },
  "keywords": [
    "cms",
    "content-management-system",
    "headless-cms",
    "sveltekit",
    "graphql",
    "mongodb"
  ],
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@sveltejs/adapter-node": "^5.4.0",
    "@sveltejs/kit": "^2.49.1",
    "@types/bun": "^1.3.3",
    "@types/node": "^24.10.1",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9.39.1",
    "prettier": "3.6.2",
    "semantic-release": "^25.0.2",
    "svelte": "^5.45.3",
    "svelte-check": "^4.3.4",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "argon2": "^0.44.0",
    "axios": "^1.13.2",
    "drizzle-orm": "^0.44.7",
    "graphql": "^16.12.0",
    "graphql-yoga": "^5.17.1",
    "mongoose": "^9.0.0",
    "uuid": "^13.0.0"
  },
    "optionalDependencies": {
    "mariadb": "^3.4.5",
    "mysql2": "^3.15.3",
    "postgres": "^3.4.7"
  }
}
