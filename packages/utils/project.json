{
    "name": "@sveltycms/utils",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/utils/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "outputs": [
                "{projectRoot}/dist"
            ],
            "options": {
                "command": "tsc --project packages/utils/tsconfig.json",
                "cwd": "{workspaceRoot}"
            }
        },
        "lint": {
            "executor": "nx:run-commands",
            "options": {
                "command": "eslint packages/utils/src --cache",
                "cwd": "{workspaceRoot}"
            }
        }
    },
    "tags": [
        "type:lib",
        "scope:utils"
    ]
}