{
  "$schema": "https://biomejs.dev/schemas/2.4.2/schema.json",
  "extends": ["ultracite/biome/core", "ultracite/biome/svelte"],
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**/*.ts",
      "**/*.js",
      "**/*.mjs",
      "**/*.cjs",
      "**/*.json",
      "**/*.svelte"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "lineWidth": 150
  },
  "linter": {
    "enabled": true,
    "rules": {
      "correctness": {
        "noUnusedFunctionParameters": "off",
        "noUndeclaredVariables": "error"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "useAwait": "off",
        "noEmptyBlockStatements": "off",
        "noBitwiseOperators": "off",
        "noEvolvingTypes": "warn",
        "noConsole": "off",
        "noDebugger": "warn",
        "useIterableCallbackReturn": "error",
        "useGuardForIn": "error"
      },
      "complexity": {
        "recommended": false
      },
      "performance": {
        "recommended": false
      },
      "style": {
        "recommended": false
      }
    }
  },
  "javascript": {
    "globals": ["Bun", "NodeJS", "globalThis"],
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "none"
    }
  },
  "overrides": [
    {
      "includes": ["**/*.svelte", "**/*.html"],
      "formatter": {
        "enabled": false
      }
    },
    {
      "includes": ["src/databases/postgresql/**"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnsafeOptionalChaining": "off"
          }
        }
      }
    },
    {
      "includes": ["tests/**", "**/*.test.ts", "**/*.spec.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off",
            "noEmptyBlockStatements": "off"
          },
          "correctness": {
            "noUnusedVariables": "off"
          }
        }
      }
    }
  ]
}
