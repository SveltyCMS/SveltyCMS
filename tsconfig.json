{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowArbitraryExtensions": true,
		"resolveJsonModule": true,
		"allowImportingTsExtensions": true,
		"types": [
			"@types/bun"
		],
		"paths": {
			"$app/*": [
				"./.svelte-kit/runtime/app/*"
			],
			"$app/environment": [
				"./tests/bun/mocks/app-environment.ts"
			],
			"@src/*": [
				"src/*"
			],
			"@utils/*": [
				"src/utils/*"
			],
			"@stores/*": [
				"src/stores/*"
			],
			"@components/*": [
				"src/components/*"
			],
			"@widgets/*": [
				"src/widgets/*"
			],
			"@databases/*": [
				"src/databases/*"
			],
			"@services/*": [
				"src/services/*"
			],
			"@hooks/*": [
				"src/hooks/*"
			],
			"@messages/*": [
				"src/messages/*"
			],
			"@paraglide/*": [
				"src/paraglide/*"
			]
		}
	},
	"include": [
		"src/**/*.js",
		"src/**/*.ts",
		"src/**/*.svelte",
		"config/**/*.ts",
		"types/**/*.ts",
		"scripts/**/*.ts",
		"tests/**/*.ts"
	],
	"exclude": [
		"node_modules",
		".svelte-kit"
	]
}