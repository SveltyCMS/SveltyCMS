{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"moduleResolution": "bundler",
		"baseUrl": ".",
		"rootDirs": [".", "./apps/cms", "./apps/cms/.svelte-kit/types", "./apps/setup", "./apps/setup/.svelte-kit/types"]
	},
	"include": [
		"apps/**/*.ts",
		"apps/**/*.svelte",
		"shared/**/*.ts",
		"shared/**/*.svelte",
		"libs/**/*.ts",
		"libs/**/*.svelte",
		"config/**/*.ts",
		"scripts/**/*.ts",
		"tests/**/*.ts",
		"src/app.d.ts",
		"src/hooks.server.ts",
		"apps/cms/.svelte-kit/types/**/$types.d.ts",
		"apps/setup/.svelte-kit/types/**/$types.d.ts"
	],
	"exclude": ["node_modules", "**/dist", ".svelte-kit"]
}
