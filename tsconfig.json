{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowArbitraryExtensions": true,
		"resolveJsonModule": true,
		"allowImportingTsExtensions": true,
		"types": ["@types/bun"]
	},
	"include": ["src/**/*.js", "src/**/*.ts", "src/**/*.svelte", "config/**/*.ts", "types/**/*.ts", "scripts/**/*.ts", "tests/**/*.ts", "apps/**/*.ts", "apps/**/*.svelte", "shared/**/*.ts", "shared/**/*.svelte"],
	"exclude": ["node_modules", ".svelte-kit", "dist", ".nx"]
	// Project references commented out until workspaces have source code
	// Uncomment after migrating code to apps/ and shared/ directories
	// "references": [
	// 	{ "path": "./shared/theme" },
	// 	{ "path": "./shared/database" },
	// 	{ "path": "./shared/utils" },
	// 	{ "path": "./shared/components" },
	// 	{ "path": "./shared/hooks" },
	// 	{ "path": "./shared/stores" },
	// 	{ "path": "./shared/paraglide" }
	// ]
}
