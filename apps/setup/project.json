{
	"name": "setup",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "apps/setup/src",
	"projectType": "application",
	"tags": [
		"app:setup",
		"scope:public"
	],
	"targets": {
		"paraglide": {
			"executor": "nx:run-commands",
			"options": {
				"command": "paraglide-js compile --project ./project.inlang --outdir ./src/lib/paraglide",
				"cwd": "apps/setup"
			}
		},
		"dev": {
			"executor": "nx:run-commands",
			"dependsOn": [
				"paraglide"
			],
			"options": {
				"command": "svelte-kit sync && vite dev --port 5173",
				"cwd": "apps/setup",
				"color": true
			}
		},
		"build": {
			"executor": "nx:run-commands",
			"dependsOn": [
				"paraglide"
			],
			"options": {
				"command": "vite build",
				"cwd": "apps/setup"
			},
			"outputs": [
				"{projectRoot}/build",
				"{projectRoot}/.svelte-kit"
			],
			"configurations": {
				"production": {
					"command": "vite build"
				}
			}
		},
		"preview": {
			"executor": "nx:run-commands",
			"dependsOn": [
				"build"
			],
			"options": {
				"command": "vite preview --port 4173",
				"cwd": "apps/setup"
			}
		},
		"check": {
			"executor": "nx:run-commands",
			"dependsOn": [
				"paraglide"
			],
			"options": {
				"command": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --threshold error",
				"cwd": "apps/setup"
			}
		},
		"lint": {
			"executor": "nx:run-commands",
			"options": {
				"command": "eslint .",
				"cwd": "apps/setup"
			}
		}
	}
}